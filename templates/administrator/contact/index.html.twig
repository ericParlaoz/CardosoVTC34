{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row-admin">

            <H1 class="title card-header text-center">Liste des clients</H1>
            <div class="card-body text-center">

                <table class="table">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Telephone</th>
                        <th>Email</th>
                        <th>Message</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.nom }}</td>
                            <td>{{ contact.telephone }}</td>
                            <td>{{ contact.email }}</td>
                            <td>{{ contact.message }}</td>
                            <td>
                                {{ include('administrator/contact/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">Pas de message</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a class="bouton btn btn-primary" href="{{ path('admin') }}">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
