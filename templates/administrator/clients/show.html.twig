{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
{% endblock %}

{% block body %}
    <section class="section-admin">
        <div class="container">
            <div class="row">
                <H2 class="H2-corps">Infos clients</H2>
                <div class="col">
                    <div class="card-admin">
                        <h3 class="H2-corps">Infos course</h3>
                        <div><strong>Date de la course:</strong> {{ client.date }}</div>
                        <div><strong>Nom client:</strong> {{ client.nom }}</div>
                        <div><strong>Prénom client:</strong> {{ client.prenom }}</div>
                        <div><strong>Entreprise:</strong> {{ client.entreprise }}</div>
                        <div><strong>Téléphone client:</strong> {{ client.telephone }}</div>
                        <div><strong>Email client:</strong> {{ client.email }}</div>
                        <div><strong>Adresse de départ:</strong> {{ client.adresseDepart }}</div>
                        <div><strong>Adresse d'arrivée:</strong> {{ client.adresseArrivee }}</div>
                        <div><strong>Infos complémentaires</strong> {{ client.infos }}</div>
                        <div><strong>ID unique</strong> {{ client.uniqueId }}</div>
                        <a class="button2 btn btn-primary mt-3" href="{{ path('clients_index') }}">Retour à la liste</a>
                        <div class="mt-3">{{ include('administrator/clients/_delete_form.html.twig') }}</div>
                    </div>
                </div>
                <div class="col">
                    <div class="card-admin">
                        <h3 class="H2-corps">Infos facturation</h3>
                        <div><strong>Date de réservation:</strong> {{ client.dateReservation }}</div>
                        <div><strong>Nom client:</strong> {{ client.nom }}</div>
                        <div><strong>Prénom client:</strong> {{ client.prenom }}</div>
                        <div><strong>Adresse</strong> {{ client.rue }}</div>
                        <div><strong>Code postal</strong> {{ client.codePostal }}</div>
                        <div><strong>Ville:</strong> {{ client.ville }}</div>
                        <a href="{{ path('pdf_id', {unique_id: client.uniqueId}) }}" class="button2 btn btn-success mt-3"
                           target="_blank">Télécharger la facture client</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
