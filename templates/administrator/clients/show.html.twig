{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <h1>Clients</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ client.prenom }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ client.entreprise }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ client.rue }}</td>
            </tr>
            <tr>
                <th>Codepostal</th>
                <td>{{ client.codepostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ client.ville }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ client.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Adresse départ</th>
                <td>{{ client.adresseDepart }}</td>
            </tr>
            <tr>
                <th>Adresse arrivée</th>
                <td>{{ client.adresseArrivee }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ client.date }}</td>
            </tr>
            <tr>
                <th>Facture client</th>
                <td><a href="{{ path('pdf_id', {unique_id: client.uniqueId}) }}" class="button2 btn btn-danger" target="_blank">Télécharger la facture client</a>
                    <a class="button2 btn btn-danger ms-3" href="mailto:{{ client.email }}?subject=Votre%20facture%20&body=Veillez%20trouver%20ci-joint%20le%20lien%20de%20votre%20facture%0D%0A%0D%0Ahttp://127.0.0.1:8000/pdf/{{ client.uniqueId }}%0D%0A%0D%0Awww.cardosovtc34.fr">Envoyer facture client</a>
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('clients_index') }}">Retour à la liste</a>

    <a class="btn btn-success" href="{{ path('clients_edit', {'id': client.id}) }}">Éditer</a>

    {{ include('administrator/clients/_delete_form.html.twig') }}
{% endblock %}
